<UserControl x:Class="AppWarehouse.views.OLAP.LuasArealProduksi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"  xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" xmlns:dxpg="http://schemas.devexpress.com/winfx/2008/xaml/pivotgrid" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <UserControl.Resources>

        <dx:PivotOlapDataSource x:Key="PivotOlapDataSource" Cube="Luas Areal Produksi" Catalog="PTPOLAP" ConnectionTimeout="60" LocaleIdentifier="33" Password="{x:Null}" Provider="MSOLAP.6" QueryTimeout="30" Server="LENOVO-PC" UserId="LENOVO-PC\Lenovo">
            <dx:DesignDataManager.DesignData>
                <dx:DesignDataSettings RowCount="5"/>
            </dx:DesignDataManager.DesignData>
        </dx:PivotOlapDataSource>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel
			Orientation="Vertical">
            <TextBlock
				Foreground="#FF254264"
				Text="Areal Produksi"
				FontSize="27"
				FontWeight="Bold"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
                />
            <TextBlock
				Margin="0,10,0,0"
				Text="Data Area:"
				Foreground="#FF254264"
				FontSize="20"
				FontWeight="Bold"
                />
            <StackPanel Orientation="Horizontal"
				Margin="0,10,0,0">
                <RadioButton 
					GroupName="da" 
					x:Name="kloonal" 
					x:FieldModifier="public" 
					Foreground="#FF254264"
					FontSize="14"
					Margin="20,0,10,0" Content="Kloonal" Checked="kloonal_Checked"/>

                <RadioButton GroupName="da" 
					x:Name="Seeding"
					FontSize="14"
					x:FieldModifier="public" 
					Foreground="#FF254264" 
					Margin="20,0,20,0" Content="Seeding" Checked="Seeding_Checked"/>

            </StackPanel>
        </StackPanel>
        <ScrollViewer
			Grid.Row="1"
			Height="400">
            <StackPanel>
                <dxpg:PivotGridControl Visibility="Visible" x:Name="pivotGridControl" ChartSelectionOnly="False" Height="350" OlapDataProvider="OleDb" OlapConnectionString="{Binding ConnectionString, Source={StaticResource PivotOlapDataSource}}">
                    <dxpg:PivotGridControl.Fields>
                        <dxpg:PivotGridField Area="RowArea" Caption="Nama Afdelling" FieldName="[Dim Area].[Hierarchy].[Nama Afdelling]" AreaIndex="1"/>
                        <dxpg:PivotGridField Area="RowArea" Caption="Nama Blok" FieldName="[Dim Area].[Hierarchy].[Nama Blok]" AreaIndex="0"/>
                        <dxpg:PivotGridField Area="RowArea" Caption="Jenis Tanah" FieldName="[Dim Tanah].[Hierarchy].[Jenis Tanah]" AreaIndex="2"/>
                        <dxpg:PivotGridField Area="ColumnArea" Caption="Nama Bulan" FieldName="[Dim Waktu].[Hierarchy].[Nama Bulan]" AreaIndex="1"/>
                        <dxpg:PivotGridField Area="ColumnArea" Caption="Tahun" FieldName="[Dim Waktu].[Hierarchy].[Tahun]" AreaIndex="0"/>
                        <dxpg:PivotGridField x:Name="dataArea" x:FieldModifier="public" Area="DataArea" Caption="Cloonal" FieldName="[Measures].[Cloonal]" AreaIndex="0"/>
                    </dxpg:PivotGridControl.Fields>
                </dxpg:PivotGridControl>
                <dxc:ChartControl x:Name="chartControl" Visibility="Collapsed" DataSource="{Binding ChartDataSource, ElementName=pivotGridControl}"  Height="350">
                    <dxc:XYDiagram2D SeriesDataMember="Series">
                        <dxc:XYDiagram2D.SeriesTemplate>
                            <dxc:BarSideBySideSeries2D ArgumentDataMember="Arguments" ValueDataMember="Values"/>
                        </dxc:XYDiagram2D.SeriesTemplate>
                    </dxc:XYDiagram2D>
                </dxc:ChartControl>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0"  Grid.Row="2">
            <Button x:Name="Print" Width="150" Height="50" Margin="5,0,5,0" Click="Print_Click">Pivot</Button>
            <Button x:Name="Chart" Width="150" Height="50" Margin="5,0,5,0" Click="Chart_Click">Chart</Button>
            <Button x:Name="Pivot" Width="150" Height="50" Margin="5,0,5,0">Print</Button>
        </StackPanel>
    </Grid>
</UserControl>
